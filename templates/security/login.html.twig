{% extends 'base.html.twig' %}

{% block title %}Identification{% endblock %}

{% block body %}
<form method="post">
      <div class="wrapper">
    <div class="form-signin">   
    <div claass="row">
        <div class="d-flex justify-content-center">
            <img class="img-fluid w-50" src="{{asset('build/images/logo.png')}}"> 
        </div>
        <div class="d-flex justify-content-center">
            <h2 class="form-signin-heading text-logo">Grill Master</h2>
        </div>
    </div>   
      {% if app.user %}
        <p>
            * Connecté en tant que {{ app.user.userIdentifier }}. <a href="/logout" style="border:0px;color: red;box-shadow: 0px">Déconnexion</a>
        </p>
    {% endif %}
      <input type="text" class="form-control" name="username" placeholder="Utilisateur" required="" autofocus="" value="{{ last_username }}" id="inputUsername"/>
      <br/>
    {% if error %}
        <input type="password" class="form-control is-invalid" name="password" placeholder="Mot de passe" required="" id="inputPassword" autocomplete="current-password"/> 
        <div class="invalid-feedback d-block">{{ error.messageKey|trans(error.messageData, 'security') }}</div><br/>     
    {% else %}
      <input type="password" class="form-control" name="password" placeholder="Mot de passe" required="" id="inputPassword" autocomplete="current-password"/>      
    {% endif %}
    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password" style="background-color: red"></span>
      <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
        <div class="row">
            <div class="d-flex justify-content-center">
                <button class="btn btn-lg btn-primary btn-block text-white" type="submit">Connexion</button>
            </div>
            <div class="d-flex justify-content-center mt-2">
                <div style="font-size: 14px">Pas de compte ? <a href="/register">S'enregister</a></div>
            </div>
        </div>
    </div>
  </div>
  <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
</form>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</form>
{% endblock %}



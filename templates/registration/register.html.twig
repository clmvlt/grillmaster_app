{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
    <div class="wrapper">
    <div class="form-signin">       
      <div claass="row">
        <div class="d-flex justify-content-center">
            <img class="img-fluid w-50" src="{{asset('build/images/logo.png')}}"> 
        </div>
        <div class="d-flex justify-content-center">
            <h2 class="form-signin-heading text-logo">Grill Master</h2>
        </div>
    </div>   

      {% if app.user %}
        <p>
            * Connecté en tant que {{ app.user.userIdentifier }}. <a href="/logout" style="border:0px;color: red;box-shadow: 0px">Déconnexion</a>
        </p>
      {% endif %}
      
        {{ form_row(registrationForm.username, {
            label: false,
            "attr": {
                "placeholder": "Utilisateur"
            }
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: false,
            "attr": {
                "placeholder": "Mot de passe"
            }
        }) }}

        {{ form_row(registrationForm.agreeTerms, {
            label: "Accepter les conditions générales."
        }) }}
        <div class="row">
            <div class="d-flex justify-content-center">
                <button class="btn btn-lg btn-primary btn-block text-white" type="submit">S'enregistrer</button>
            </div>
            <div class="d-flex justify-content-center mt-2">
                <div style="font-size: 14px">Déjà un compte ? <a href="/login">Se connecter</a></div>
            </div>
        </div>
    </div>
  </div>
    {{ form_end(registrationForm) }}

    
{% endblock %}

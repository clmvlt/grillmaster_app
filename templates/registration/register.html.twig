{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
    <div class="wrapper">
    <div class="form-signin">       
      <h2 class="form-signin-heading">GrillMaster</h2>
      {% if app.user %}
        <p>
            * Connecté en tant que {{ app.user.userIdentifier }}. <a href="/logout" style="border:0px;color: red;box-shadow: 0px">Déconnexion</a>
        </p>
      {% endif %}
      
        {{ form_row(registrationForm.username, {
            label: false,
            "attr": {
                "placeholder": "Utilisateur"
            }
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: false,
            "attr": {
                "placeholder": "Mot de passe"
            }
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: "Accepter les conditions générales."
        }) }}
        <button class="btn btn-lg btn-primary btn-block" type="submit">S'enregister</button>   
    <div><a href="/login">Se connecter</a></div>
    </div>
  </div>
    {{ form_end(registrationForm) }}

    
{% endblock %}
